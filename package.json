{
  "name": "gestion-restaurant",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "socket:dev": "tsx watch scripts/socket-dev.ts",
    "socket:build": "tsc --project tsconfig.server.json",
    "socket:start": "node dist/server/index.js",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm socket:dev\"",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test": "pnpm test:unit && pnpm test:e2e",
    "prepare": "husky install",
    "ci": "pnpm run db:generate && pnpm run lint && pnpm test",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down -v",
    "docker:logs": "docker compose logs -f",
    "build:lib": "tsup src --format cjs,esm --dts"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-day-picker": "^5.3.0",
    "@types/recharts": "^2.0.1",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "husky": "^9.1.7",
    "lint-staged": "^13.3.0",
    "pm2": "^6.0.13",
    "postcss": "8",
    "prisma": "^6.18.0",
    "tailwindcss": "4.1.15",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^6.0.0",
    "tw-animate-css": "^1.4.0"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.18.0",
    "@radix-ui/react-accordion": "^1.2.12",
