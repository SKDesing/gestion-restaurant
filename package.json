{
  "name": "gestion-restaurant",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "socket:dev": "tsx watch scripts/socket-dev.ts",
    "socket:build": "tsc --project tsconfig.server.json",
    "socket:start": "node dist/server/index.js",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm socket:dev\"",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test": "pnpm test:unit && pnpm test:e2e",
    "prepare": "husky install",
    "ci": "pnpm run db:generate && pnpm run lint && pnpm test",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down -v",
    "docker:logs": "docker compose logs -f",
    "build:lib": "tsup src --format cjs,esm --dts"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "tsup": "^6.0.0"
  }
}
