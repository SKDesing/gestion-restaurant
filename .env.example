# .env.example - Variables d'environnement pour Gestion Restaurant

# DATABASE (PostgreSQL recommended for production)
# Exemple: postgresql://user:password@localhost:5432/restaurant_db
DATABASE_URL="postgresql://restaurant:restaurant_password@localhost:5432/restaurant_db"

# Prisma
PRISMA_CLIENT_ENGINE_TYPE=prisma

# NEXTAUTH
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="change_me_to_a_strong_random_value"

# Redis (sessions, cache, queues)
REDIS_URL="redis://default:redis_password@localhost:6379"
REDIS_PASSWORD=redis_password

# App
PORT=3000
NODE_ENV=development

# Sentry (monitoring)
SENTRY_DSN=

# Email / SMTP (pour les notifications et confirmations)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# External API keys
STRIPE_SECRET=
STRIPE_PUBLISHABLE=

# Optional: Google OAuth / Other providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Optional: Frontend URL (CORS, socket origin)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_SOCKET_URL="ws://localhost:3000"

# Local dev helper
DEV_DATABASE_URL="file:./dev.db"
